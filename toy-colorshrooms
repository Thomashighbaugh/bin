  icb=$'\e[106m';    iwb=$'\e[107m';
 #over all length of mushrooms = 64

# width of terminal
width=$(tput cols)

for ((v=0; v < ($width-64)/3; v++))
do
spaces="$spaces "
done

cat << EOF
