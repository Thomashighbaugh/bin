${ibkf}▄█${iwf}█${rb}▄${rf}██${iwb}▀▀▀▀██▀${iwf}█${rst}${ibkf}█▄${rst}${break}${spaces}${ibkf}▄█${iwf}█${gb}▄${gf}██${iwb}▀▀▀▀██▀${iwf}█${rst}${ibkf}█▄${rst}${break}${spaces}${ibkf}▄█${iwf}█${yb}▄${yf}██${iwb}▀▀▀▀██▀${iwf}█${rst}${ibkf}█▄${rst}${break}${spaces}${ibkf}▄█${iwf}█${bb}▄${bf}██${iwb}▀▀▀▀██▀${iwf}█${rst}${ibkf}█▄${rst}
${ibkf}█${iwf}███${rf}█${iwf}██████${rf}█${iwf}███${ibkf}█${rst}${break}${spaces}${ibkf}█${iwf}███${gf}█${iwf}██████${gf}█${iwf}███${ibkf}█${rst}${break}${spaces}${ibkf}█${iwf}███${yf}█${iwf}██████${yf}█${iwf}███${ibkf}█${rst}${break}${spaces}${ibkf}█${iwf}███${bf}█${iwf}██████${bf}█${iwf}███${ibkf}█${rst}
${ibkf}█${rf}${iwb}▄▄██▄${iwf}████${rf}${iwb}▄██▄▄${ibkf}█${rst}${break}${spaces}${ibkf}█${gf}${iwb}▄▄██▄${iwf}████${gf}${iwb}▄██▄▄${ibkf}█${rst}${break}${spaces}${ibkf}█${yf}${iwb}▄▄██▄${iwf}████${yf}${iwb}▄██▄▄${ibkf}█${rst}${break}${spaces}${ibkf}█${bf}${iwb}▄▄██▄${iwf}████${bf}${iwb}▄██▄▄${ibkf}█${rst}
${ibkf}█${iwb}▄▄█▀▀█▀▀█▀▀█▄▄█${rst}${break}${spaces}${ibkf}█${iwb}▄▄█▀▀█▀▀█▀▀█▄▄█${rst}${break}${spaces}${ibkf}█${iwb}▄▄█▀▀█▀▀█▀▀█▄▄█${rst}${break}${spaces}${ibkf}█${iwb}▄▄█▀▀█▀▀█▀▀█▄▄█${rst}
