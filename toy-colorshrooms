  bkf=$'\e[30m';   rf=$'\e[31m';    gf=$'\e[32m'
  yf=$'\e[33m'   bf=$'\e[34m';   mf=$'\e[35m'
  cf=$'\e[36m';    wf=$'\e[37m'

  bkb=$'\e[40m';   rb=$'\e[41m';    gb=$'\e[42m'
  yb=$'\e[43m'   bb=$'\e[44m';   mb=$'\e[45m'
  cb=$'\e[46m';    wb=$'\e[47m'; rst=$'\e[0m'

  ibkf=$'\e[90m';   irf=$'\e[91m';    igf=$'\e[92m'
  iyf=$'\e[93m'   ibf=$'\e[94m';   imf=$'\e[95m'
  icf=$'\e[96m';    iwf=$'\e[97m'

