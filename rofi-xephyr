des=$(echo -en "Awesome|bspwm|Openbox" | rofi -sep "|" -dmenu -i -p 'Xephyr' -font "FontAwesome 20" -dpi 96) # Make selection prompt

if [ $des = "Awesome" ]; then # If selection is reload

    Xephyr -br -ac -noreset -screen 1920x1080 :1
    DISPLAY=:1 awesome

elif [ $des = "bspwm" ]; then # If selection is lock

    Xephyr -br -ac -noreset -screen 1920x1080 :2
    DISPLAY=:2 bspwm

elif [ $des = "Openbox" ]; then # If selection is lock

    Xephyr -br -ac -noreset -screen 1920x1080 :3
    DISPLAY=:3 openbox

fi

exit 0 # Return exit code 0
